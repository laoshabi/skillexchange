<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aoge.skillexchange.DetailActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"

        android:scaleType="fitXY"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">>

        <TextView
            android:id="@+id/txt_d_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="casual"
            android:text="Detail"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/imb_d_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="detailBack"
            android:background="@null"
            android:src="@drawable/ic_chevron_left_black_24dp"
            tools:layout_editor_absoluteY="41dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <com.example.aoge.skillexchange.CircleImageButton
            android:id="@+id/img_d_headportrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/txt_d_username"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="casual"
            android:text="Daniel Ge"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/img_d_headportrait"
            app:layout_constraintHorizontal_bias="0.214"
            app:layout_constraintStart_toStartOf="@+id/img_d_headportrait"
            app:layout_constraintTop_toBottomOf="@+id/img_d_headportrait" />

        <TextView
            android:id="@+id/txt_d_email"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="152dp"
            android:fontFamily="casual"
            android:text="Email:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_d_location"
            app:layout_constraintTop_toTopOf="@+id/img_d_headportrait" />

        <TextView
            android:id="@+id/txt_d_email_show"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:fontFamily="casual"
            android:text="danielge@gmail.com"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txt_d_email"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_username" />

        <TextView
            android:id="@+id/txt_d_location"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            android:fontFamily="casual"
            android:text="Location:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_email"
            tools:layout_editor_absoluteX="39dp" />

        <TextView
            android:id="@+id/txt_d_location_show"
            android:layout_width="95dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="casual"
            android:text="Chongqing"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txt_d_location"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_email_show" />

        <TextView
            android:id="@+id/txt_d_can"
            android:layout_width="47dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:fontFamily="casual"
            android:text="I can:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_d_location"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_location" />

        <TextView
            android:id="@+id/txt_d_can_show"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="casual"
            android:text="Coding"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txt_d_can"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_location_show" />

        <TextView
            android:id="@+id/txt_d_want"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:fontFamily="casual"
            android:text="I want:"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_d_can"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_can" />

        <TextView
            android:id="@+id/txt_d_want_show"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="casual"
            android:text="Pinao"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txt_d_want"
            app:layout_constraintTop_toBottomOf="@+id/txt_d_can_show" />

        <Button
            android:id="@+id/btn_d_context"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/editbutton"
            android:onClick="Chat"
            android:text="Chat"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/img_d_headportrait"
            app:layout_constraintStart_toStartOf="@+id/img_d_headportrait"
            app:layout_constraintTop_toTopOf="@+id/txt_d_username" />

        <ImageView
            android:id="@+id/imv_d_gender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/img_d_headportrait"
            app:layout_constraintTop_toTopOf="@+id/img_d_headportrait"
            app:srcCompat="@drawable/man" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
